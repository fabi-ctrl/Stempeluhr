<Window x:Class="Stempeluhr.EditSaldo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stempeluhr"
        mc:Ignorable="d"
        Title="Saldo bearbeiten" Height="200" Width="250" WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow">
    <Grid>
        <StackPanel>
            <Label Content="Hier kannst du deinen Saldo bearbeiten" Background="AliceBlue"/>
            <Label Content="Aktueller Saldo:"/>
            <TextBox x:Name="tb_aktSaldo" TextWrapping="Wrap" Width="50" IsEnabled="False" HorizontalAlignment="Left" Margin="5,0,0,0"/>
            <Label Content="Neuen Saldo eingeben:"/>
            <TextBox x:Name="tb_uptSaldo" TextWrapping="Wrap" Width="50" HorizontalAlignment="Left" Margin="5,0,0,0"/>
            <Button x:Name="but_Save" Content="Speichern" Margin="20,15,20,0" Width="100" MaxWidth="100" HorizontalAlignment="Center" Click="but_Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
